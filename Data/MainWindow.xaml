<Window x:Class="Data.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Data"
        mc:Ignorable="d" Name="wndPrincipal"
        Title="MainWindow" Height="398" Width="672">
    <Grid>
        <TextBox x:Name="txtEjemplo" HorizontalAlignment="Left" Height="23" Margin="48,51,0,0" TextWrapping="Wrap" Text="Hello" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="48,94,0,0" TextWrapping="Wrap" Text="{Binding Path=Text,ElementName=txtEjemplo}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="285,142,0,0" TextWrapping="Wrap" Text="{Binding Path=Width,ElementName=wndPrincipal}" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="199,142,0,0" TextWrapping="Wrap" Text="Ancho" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="285,188,0,0" TextWrapping="Wrap" Text="{Binding Path=Height, ElementName=wndPrincipal}" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="199,188,0,0" TextWrapping="Wrap" Text="Alto" VerticalAlignment="Top"/>

    </Grid>
</Window>
